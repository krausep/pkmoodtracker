        }
    </script>
}


<h2>Moods</h2>

<div id="curve_chart" style="width: 900px; height: 500px"></div>
<div ng-app="MoodApp" class="container" ng-controller="MoodController">
    <br />
    <form ng-submit="addMood()" class="form-horizontal">
        <div class="row form-group">
            <div class="row">
                <label for="moodText">Mood:</label>
            </div>
            <div class="row">
                <input id="moodText" type="text" placeholder="What's your mood?" ng-model="newMood.mood" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="row">
                <label for="notesText">Notes:</label>
            </div>
            <div class="row">
                <textarea id="notesText" type="text" placeholder="Notes..." ng-model="newMood.notes" class="form-control" ng-maxlength="{{maxNoteLength}}"></textarea>
                <div id="characters">
                    <span>Characters left: {{maxNoteLength - newMood.notes.length}}</span>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="row">
                <label for="scaleNumber">Scale of 1-10:</label>
            </div>
            <div class="row">
                <input id="scaleNumber" type="number" placeholder="7" ng-model="newMood.scale" class="form-control" />
            </div>
            <div class="row">
                <input id="scaleRange" type="range" min="0" max="10" ng-model="newMood.scale" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <input type="submit" value="Submit" id="submit" class="btn btn-success" />
        </div>
    </form>
    <br />
    <div class="row">
        <input type="text" placeholder="Search Mood" ng-model="searchMood" />
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead class="thead">
            <tr>
                <td class="col-md-2">Date</td>
                <td>Mood</td>
                <td>Notes</td>
                <td class="col-md-2">Scale</td>
                <td>Scale (num)</td>
                <td>Delete</td>
            </tr>
            </thead>
            <tbody class="table-hover">
            <tr ng-repeat="r in moods | filter : searchMood">
                <td>{{r.ModifiedDate.slice(6, -2) | date: 'EEE MMM dd, yyyy'}}</td>
                <td>{{r.Mood}}</td>
                <td>{{r.Notes}}</td>
                <td><input type="range" min="0" max="10" value="{{r.Scale}}"/></td>'
                <td>{{r.Scale}}</td>

                <td><button class="fa fa-remove" aria-hidden="true" ng-click="deleteMood($index)"></button></td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead class="thead">
                <tr>
                    <td class="col-md-2">Day of Week</td>
                    <td>Average Scale</td>
                </tr>
            </thead>
            <tbody class="table-hover">
                <tr ng-repeat="r in moodAverages">
                    <td>{{r.DayOfWeek}}</td>
                    <td>{{r.Average}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>




